<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/game_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.GameActivity">


    <TextView
            android:id="@+id/game_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/game_title"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/main_title_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Разделите героев"
            android:paddingEnd="16dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            app:layout_anchor="@id/game_title"
            app:layout_anchorGravity="bottom"
            android:paddingStart="16dp"
            android:paddingBottom="16dp"
            android:ellipsize="end"
            android:maxLines="3"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/game_title"/>

    <vs.game.slices.view.view.SliceView
            android:id="@+id/slice_card_second"
            android:layout_width="match_parent"
            app:layout_behavior=".view.SwipeBehavior"
            app:layout_anchorGravity="bottom"
            android:layout_gravity="bottom"
            tools:background="@color/black"
            android:elevation="2dp"
            app:layout_anchor="@id/main_title_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="450dp"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/main_title_description"/>

    <vs.game.slices.view.view.SliceView
            android:id="@+id/slice_card_first"
            android:layout_width="match_parent"
            app:layout_behavior=".view.SwipeBehavior"
            app:layout_anchorGravity="bottom"
            android:elevation="4dp"
            android:layout_gravity="bottom"
            app:layout_anchor="@id/main_title_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="450dp"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/main_title_description"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/main_buttom_left"
                android:layout_width="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_gravity="bottom"
                android:paddingStart="32dp"
                android:paddingEnd="22dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/bg_answer_left"
                tools:text="Какой-то сериалсериалсериалсериалсериал"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/main_buttom_right"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/main_buttom_right"
                android:background="@drawable/bg_answer_right"
                android:layout_width="0dp"
                android:layout_marginStart="8dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingStart="32dp"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:paddingEnd="22dp"
                android:gravity="center"
                android:maxLines="3"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:layout_marginBottom="16dp"
                tools:text="Какой-то"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/main_buttom_left"
                app:layout_constraintEnd_toEndOf="parent"/>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>