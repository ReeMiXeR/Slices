<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.GameActivity">


    <TextView
            android:id="@+id/main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Задание"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/main_title_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Разделите героев"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:ellipsize="end"
            android:maxLines="3"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:textSize="28sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_title"/>


    <!--    cardBackgroundColor по идеи должен цвет ставить втф-->
    <FrameLayout
            android:id="@+id/main_character_card"
            android:layout_width="0dp"
            style="@style/CardView.Dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="450dp"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/main_title_description">
        <!--            app:cardCornerRadius="16dp"-->
        <!--            app:cardElevation="4dp"-->
        <!--            app:cardBackgroundColor="@color/gray"-->

        <!--        todo заморочится и грузить сразу в background cardview-->
        <ImageView
                android:id="@+id/main_character_card_image"
                android:layout_width="match_parent"
                tools:background="@color/black"
                android:layout_height="match_parent"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/main_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:layout_margin="16dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:maxLines="3"
                android:textSize="18sp"
                tools:text="Имя"/>

    </FrameLayout>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/main_buttom_left"
            android:layout_width="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingStart="32dp"
            android:paddingEnd="22dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/bg_answer_left"
            tools:text="Какой-то сериалсериалсериалсериалсериал"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/main_buttom_right"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/main_buttom_right"
            android:background="@drawable/bg_answer_right"
            android:layout_width="0dp"
            android:layout_marginStart="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingStart="32dp"
            android:paddingEnd="22dp"
            android:gravity="center"
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp"
            tools:text="Какой-то"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/main_buttom_left"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>