<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/game_result_container"
        android:layout_width="match_parent"
        android:layout_height="240dp">


    <ImageView
            android:id="@+id/game_result_background"
            tools:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/black_gradient"
            app:layout_constraintTop_toBottomOf="@+id/game_result_correctness"
            app:layout_constraintBottom_toBottomOf="@id/game_result_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/game_result_correctness"
            android:layout_width="wrap_content"
            tools:text="Неверно"
            android:layout_marginBottom="8dp"
            android:textSize="16sp"
            android:background="@drawable/oval"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:layout_constraintBottom_toTopOf="@id/game_result_character_name"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/game_result_character_name"
            android:layout_width="wrap_content"
            tools:text="Джон Сноу"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/item_game_result_wrong_answer"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_game_result_wrong_answer"
            android:layout_width="wrap_content"
            tools:text="Игра престолов"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/item_game_result_correct_answer"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_game_result_correct_answer"
            android:layout_width="wrap_content"
            tools:text="Властелин колец"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>